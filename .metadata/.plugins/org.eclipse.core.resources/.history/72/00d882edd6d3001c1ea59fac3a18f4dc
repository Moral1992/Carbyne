package ArrayOfStrings;

import java.util.*;

public class FindLongestStrings {

	public static void main(String[] args)
	{
		
		String []arr = {"cat", "dog", "red", "is", "cow" };
		System.out.println(maxLength(arr));
				
	}
	
	
	static Vector<String> maxLength(String []arr)
	{
		Vector<String> ans = new Vector<String>();
	    int maxChars = 0;
	    
	    //Done in two iterations to handle the case of more than one maximum length string without having to delete existing array 
	    
	    //first iteration to find max
	    for(int i = 0; i < arr.length; i++)
	    {	      	 
	        if (maxChars == arr[i].length())
	        {
	        	ans.add(arr[i]);
	        }
	        
	        else if(maxChars < arr[i].length())
	        {
	        	ans.clear();
	        	ans.add(arr[i]);
	        }
	        
	        
	    }
	    
	  //second iteration to insert to list
	    for (int i = 0; i < arr.length; i++)
	    {
	    	if (arr[i].length() == maxChars)
	    	{
	    		ans.add(arr[i]);
	    	}
	    }
	 
	    return ans;
	}

	 

}
